<UserControl x:Class="ForeignWords.App.Views.WordsListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ForeignWords.App.Views"
             xmlns:viewModels="clr-namespace:ForeignWords.App.ViewModels"
             xmlns:converters="clr-namespace:ForeignWords.App.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModels:WordsListViewModel}">
    <UserControl.Resources>
        <converters:ListToStringConverter x:Key="ListToStringConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Filter:"
                VerticalAlignment="Bottom"
                Margin="15 0 0 0"
                />

            <TextBox
                Grid.Row="1"
                Grid.Column="0"
                Text="{Binding FilteredText, UpdateSourceTrigger=PropertyChanged}"
                Margin="15 0 15 0"
                VerticalAlignment="Center"
                FontSize="16"
            />

            <Button
                Grid.Row="1"
                Grid.Column="1"
                Content="X"
                Width="25"
                Height="25"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="15 0 15 0"
                Command="{Binding ClearFilterCommand}"
            />
        </Grid>

        <DataGrid 
            x:Name="Words" 
            Grid.Row="1" 
            Margin="15" 
            ItemsSource="{Binding Path=Translations}" 
            SelectedItem="{Binding SelectedTranslation, UpdateSourceTrigger=PropertyChanged}"
            AutoGenerateColumns="False"
            IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Domestic Word" Binding="{Binding DomesticWord}"/>
                <DataGridTextColumn Header="Translations" Binding="{Binding ForeignWords, Converter={StaticResource ListToStringConverter}}"/>
                <DataGridTextColumn Header="Score" Binding="{Binding Score}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button 
            Grid.Row="2"
            Width="100"
            Height="25"
            HorizontalAlignment="Left"
            Margin="15, 0, 0, 0"
            Content="Cancel"
            Command="{Binding CancelCommand}"
            />

        <StackPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0 0 15 0" Orientation="Horizontal">
            <Button
                Width="100"
                Height="25"
                HorizontalAlignment="Right"
                Margin="0, 0, 15, 0"
                Content="Delete"
                Command="{Binding DeleteCommand}"
                />
            <Button
                Width="100"
                Height="25"
                HorizontalAlignment="Right"
                Content="Edit"
                Command="{Binding EditCommand}"
                />
        </StackPanel>

    </Grid>
</UserControl>
