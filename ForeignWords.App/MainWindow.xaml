<Window x:Class="ForeignWords.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForeignWords.App"
        xmlns:views="clr-namespace:ForeignWords.App.Views"
        xmlns:vms="clr-namespace:ForeignWords.App.ViewModels"
        mc:Ignorable="d"
        Title="Learn Foreign Words!" Height="450" Width="800">
    <Grid>
        <Grid.Resources>
            <DataTemplate DataType="{x:Type vms:HomeViewModel}">
                <views:HomeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:ModifyWordViewModel}">
                <views:ModifyWordView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:WordsListViewModel}">
                <views:WordsListView/>
            </DataTemplate>
        </Grid.Resources>

        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
